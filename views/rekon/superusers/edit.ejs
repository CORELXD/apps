<%- include('../../partials/_head.ejs') %>
<body>
  <link rel="stylesheet" href="/assets/css/edit.css">
  <%- include('../../partials/_navbar.ejs') %>
  
  <div class="container my-4">
    <div class="scrollable-form-container">
      <form action="/rekon/superusers/update/<%= id_rekon %>" method="POST" enctype="multipart/form-data"  class="scrollable-form">
        <div class="row mb-3">
          <div class="col-md-6">
            <label for="incident" class="form-label">Incident</label>
            <input type="text" id="incident" class="form-control" name="incident" value="<%= incident %>">
          </div>
          <div class="col-md-6">
            <label for="customer" class="form-label">Customer</label>
            <input type="text" id="customer" class="form-control" name="customer" value="<%= customer %>">
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-md-6">
            <label for="layanan" class="form-label">Layanan</label>
            <input type="text" id="layanan" class="form-control" name="layanan" value="<%= layanan %>">
          </div>
          <div class="col-md-6">
            <label for="kategori" class="form-label">Kategori</label>
            <input type="text" id="kategori" class="form-control" name="kategori" value="<%= kategori %>">
          </div>
        </div>
        
        <div class="row mb-3">
          <div class="col-md-6">
            <label for="regional" class="form-label">Regional</label>
            <input type="text" id="regional" class="form-control" name="regional" value="<%= regional %>">
          </div>
          <div class="col-md-6">
            <label for="witel" class="form-label">Witel</label>
            <input type="text" id="witel" class="form-control" name="witel" value="<%= witel %>">
          </div>
        </div>
        
        <div class="row mb-3">
          <div class="col-md-6">
            <label for="jenis_permintaan" class="form-label">Jenis Permintaan</label>
            <select id="jenis_permintaan" class="form-control" name="jenis_permintaan">
              <option value="exclude" <%= jenis_permintaan === 'exclude' ? 'selected' : '' %>>Exclude</option>
              <option value="reduksi" <%= jenis_permintaan === 'reduksi' ? 'selected' : '' %>>Reduksi</option>
            </select>
          </div>
          <div class="col-md-6">
            <label for="reason" class="form-label">Reason</label>
            <input type="text" id="reason" class="form-control" name="reason" value="<%= reason %>">
          </div>
        </div>
        
        <div class="row mb-3">
          <div class="col-md-6">
            <label for="ttr_e2e_awal" class="form-label">TTR E2E Awal</label>
            <input type="text" id="ttr_e2e_awal" class="form-control" name="ttr_e2e_awal" value="<%= ttr_e2e_awal %>">
          </div>
          <div class="col-md-6">
            <label for="ttr_after_reduksi" class="form-label">TTR After Reduksi</label>
            <input type="text" id="ttr_after_reduksi" class="form-control" name="ttr_after_reduksi" value="<%= ttr_after_reduksi %>">
          </div>
          
        </div>
        
        <div class="row mb-3">
          <div class="col-md-6">
            <!-- Menampilkan gambar yang ada (hanya satu gambar pada contoh ini) -->
            <% if (eviden) { %>
              <% let files = eviden.split(','); %>
              <% files.forEach(function(file) { %>
                <img src="/images/upload/<%= encodeURIComponent(file.trim()) %>" height="100" style="margin-right: 5px;" alt="Eviden Regional">
              <% }); %>
            <% } else { %>
              <p>No image available</p>
            <% } %>
            <label for="eviden" class="form-label">Eviden Regional</label>
            <input type="file" id="eviden" class="form-control" name="eviden" multiple>
          </div> 
          <div class="col-md-6">
            <label for="catatan_sda" class="form-label">Catatan SDA</label>
            <textarea id="catatan_sda" class="form-control" name="catatan_sda" rows="3"><%= catatan_sda %></textarea>
          </div>
        </div>
        
        <div class="row mb-3">
          <div class="col-md-6">
            <label for="validasi_sda" class="form-label">Validasi SDA</label>
            <textarea id="validasi_sda" class="form-control" name="validasi_sda" rows="3"><%= validasi_sda %></textarea>
          </div>
          <div class="col-md-6">
            <label for="approved_not_ppq" class="form-label">Approved Not PPQ</label>
            <input type="text" id="approved_not_ppq" class="form-control" name="approved_not_ppq" value="<%= approved_not_ppq %>">
          </div>
        </div>
        
        <div class="row mb-3">
          <div class="col-md-6">
            <label for="rep_rec" class="form-label">Rep/Rec</label>
            <input type="text" id="rep_rec" class="form-control" name="rep_rec" value="<%= rep_rec %>">
          </div>
          <div class="col-md-6">
            <label for="change_to" class="form-label">Change To</label>
            <input type="text" id="change_to" class="form-control" name="change_to" value="<%= change_to %>">
          </div>
        </div>
        <div class="mt-3">
          <button id="submit" class="btn btn-sm btn-success">Simpan</button>
        </div>
      </form>
    </div>  
  </div>
  
  <%- include('../../partials/_foot.ejs') %>
</body>