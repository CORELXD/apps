<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Detail Kategori</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    </head>
    <body>
        <div class="container mt-5">
            <table class="table mt-5">
                <thead>
                    <tr>
                        <th scope="col">ID Kategori</th>
                        <th scope="col">Nama Kategori</th>
                        <th scope="col">Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row"><%= id %></th>
                        <td><%= nama_kategori %></td>
                        <td>
                            <form action="/kategori/approve/<%= id %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-success" id="approveButton">Approve</button>
                            </form>
                            <form action="/kategori/reject/<%= id %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-danger" id="rejectButton">Reject</button>
                            </form>
                        </td>
                    </tr>
                </tbody>
            </table>
            <a href="/kategori/admin" class="btn btn-sm btn-success">Home</a>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        <script>
            document.getElementById('approveButton').addEventListener('click', function() {
                document.getElementById('approveButton').disabled = true;
                document.getElementById('rejectButton').disabled = true;
            });
            document.getElementById('rejectButton').addEventListener('click', function() {
                document.getElementById('approveButton').disabled = true;
                document.getElementById('rejectButton').disabled = true;
            });
        </script>
    </body>
</html>
